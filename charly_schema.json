{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CHARLY Property Record Schema",
  "type": "object",
  "properties": {
    "parcel_id": { "type": "string" },
    "address": { "type": "string" },
    "year_built": { "type": "integer", "minimum": 1800, "maximum": 2025 },
    "renovation_notes": { "type": ["string", "null"] },
    "building_class": { "type": "string", "enum": ["A", "B", "C"] },
    "gross_leasable_area": { "type": "number", "minimum": 0 },
    "jurisdiction": { "type": "string" },
    "assessed_value": { "type": "number", "minimum": 0 },
    "assessed_value_per_sf": { "type": "number", "minimum": 0 },
    "market_rent": { "type": "number", "minimum": 0 },
    "vacancy_rate": { "type": "number", "minimum": 0, "maximum": 1 },
    "cap_rate_used": { "type": "number", "minimum": 0, "maximum": 1 },
    "valuation_method_used": { "type": "string" }
  },
  "required": [
    "parcel_id",
    "address",
    "year_built",
    "building_class",
    "gross_leasable_area",
    "jurisdiction",
    "assessed_value",
    "assessed_value_per_sf",
    "market_rent",
    "vacancy_rate",
    "cap_rate_used",
    "valuation_method_used"
  ]
}
