#
# ============================================================================

# SENTRY ERROR TRACKING (Phase 3D - Priority 1)
# Get your DSN from: https://sentry.io/settings/your-org/projects/charly/keys/
VITE_SENTRY_DSN=https://your-sentry-dsn@your-org.ingest.sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token-here
SENTRY_ORG=your-organization
SENTRY_PROJECT=charly-platform

# PERFORMANCE MONITORING (Phase 3D - Priority 1)
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_API_ENDPOINT=https://api.charly.com/metrics
VITE_WEB_VITALS_ENDPOINT=https://api.charly.com/web-vitals

# CORE WEB VITALS MONITORING (Phase 3D - Priority 1)
VITE_ENABLE_WEB_VITALS=true
VITE_WEB_VITALS_SAMPLING_RATE=1.0
VITE_PERFORMANCE_OBSERVER_ENABLED=true

# BUSINESS ANALYTICS (Phase 3D - Priority 2)
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
VITE_ANALYTICS_API_ENDPOINT=https://api.charly.com/analytics
VITE_USER_BEHAVIOR_TRACKING=true
VITE_REVENUE_TRACKING_ENABLED=true

# SECURITY MONITORING (Phase 3D - Priority 2)
VITE_SECURITY_LOGGING_ENABLED=true
VITE_SECURITY_EVENTS_ENDPOINT=https://api.charly.com/security-events
VITE_INTRUSION_DETECTION_ENABLED=true
VITE_AUDIT_LOGGING_ENABLED=true

# ALERTING CONFIGURATION (Phase 3D - Priority 2)
VITE_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
VITE_PAGERDUTY_INTEGRATION_KEY=your-pagerduty-key
VITE_EMAIL_ALERTS_ENABLED=true
VITE_CRITICAL_ERROR_THRESHOLD=5

# MONITORING THRESHOLDS (Apple CTO Standards)
VITE_PERFORMANCE_THRESHOLD_LCP=2500
VITE_PERFORMANCE_THRESHOLD_FID=100
VITE_PERFORMANCE_THRESHOLD_CLS=0.1
VITE_API_RESPONSE_THRESHOLD=2000
VITE_ERROR_RATE_THRESHOLD=0.01

# FEATURE FLAGS FOR MONITORING
VITE_REAL_USER_MONITORING=true
VITE_SESSION_REPLAY_ENABLED=true
VITE_MEMORY_MONITORING_ENABLED=true
VITE_NETWORK_MONITORING_ENABLED=true

# COMPLIANCE & AUDITING
VITE_GDPR_COMPLIANCE_MODE=true
VITE_SOC2_LOGGING_ENABLED=true
VITE_DATA_RETENTION_DAYS=90
VITE_PII_SCRUBBING_ENABLED=true

# PRODUCTION DEPLOYMENT SETTINGS
VITE_MONITORING_ENVIRONMENT=production
VITE_LOG_RETENTION_DAYS=30
VITE_METRICS_AGGREGATION_INTERVAL=60000
VITE_HEALTH_CHECK_INTERVAL=30000

