{
  "name": "@charly/api",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "test:perf": "vitest run src/test/performance-agent.test.ts",
    "test:g4": "vitest run src/test/g4-performance-integration.test.ts",
    "perf:full": "node ../../tools/performance-runner.js --scale full",
    "perf:medium": "node ../../tools/performance-runner.js --scale medium",
    "perf:light": "node ../../tools/performance-runner.js --scale light",
    "perf:residential": "node ../../tools/performance-runner.js --scenario heavy-residential",
    "perf:commercial": "node ../../tools/performance-runner.js --scenario moderate-commercial",
    "perf:ai": "node ../../tools/performance-runner.js --scenario ai-router-stress",
    "security:scan": "node scripts/security-audit.js"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/jwt": "^8.0.1",
    "@fastify/multipart": "^8.0.0",
    "@types/pg": "^8.15.5",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "fastify": "^4.24.0",
    "pg": "^8.16.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
