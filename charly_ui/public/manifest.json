  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+charly",
      "url": "/handle/%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/vnd.ms-excel": [".xls", ".xlsx"],
        "text/csv": [".csv"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "documents",
          "accept": ["application/pdf", "image/*", ".csv", ".xlsx"]
        }
      ]
    }
  },
  "handle_links": "preferred",
  "capture_links": "new-client",
  "display_override": ["window-controls-overlay", "minimal-ui"],
  "iarc_rating_id": "e58c174a-81d2-5c3c-32cc-34b8de4a52e9"
