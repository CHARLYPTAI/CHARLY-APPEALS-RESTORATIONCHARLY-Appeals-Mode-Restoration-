{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CHARLY Rules Config Schema",
  "type": "object",
  "patternProperties": {
    "^[A-Za-z ]+$": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "threshold": { "type": "number" },
          "range": {
            "type": "array",
            "items": { "type": "number" },
            "minItems": 2,
            "maxItems": 2
          },
          "logic_chain": { "type": "string" },
          "method_selector": { "type": "string", "enum": ["Income", "Sales", "Cost"] },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
