[flake8]
max-line-length = 88
max-complexity = 10
select = E,W,F,C
ignore = 
    E203,
    E501,
    W503,
    F401,
    E402
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .tox,
    .pytest_cache,
    *\ 2.py,
    charly_filing_assistant.py,
    charly_gpt_narrative_generator.py
per-file-ignores =
    __init__.py:F401
    */tests/*:F401,E501
    test_*.py:F401,E501