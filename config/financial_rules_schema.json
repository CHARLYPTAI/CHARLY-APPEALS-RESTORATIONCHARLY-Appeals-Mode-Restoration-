{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Financial Rules Schema",
  "type": "object",
  "required": ["fields", "calculations"],
  "properties": {
    "fields": {
      "type": "object",
      "minProperties": 4,
      "properties": {
        "income": {
          "type": "string"
        },
        "expenses": {
          "type": "string"
        },
        "market_value": {
          "type": "string"
        },
        "vacancy_rate": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "calculations": {
      "type": "object",
      "minProperties": 4,
      "properties": {
        "noi": {
          "type": "object",
          "required": ["description", "method", "operands"],
          "properties": {
            "description": {
              "type": "string"
            },
            "method": {
              "type": "string",
              "enum": ["subtract", "divide", "multiply_with_complement"]
            },
            "operands": {
              "type": "array",
              "minItems": 2,
              "maxItems": 2,
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "cap_rate": {
          "type": "object",
          "required": ["description", "method", "operands"],
          "properties": {
            "description": {
              "type": "string"
            },
            "method": {
              "type": "string",
              "enum": ["subtract", "divide", "multiply_with_complement"]
            },
            "operands": {
              "type": "array",
              "minItems": 2,
              "maxItems": 2,
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "expense_ratio": {
          "type": "object",
          "required": ["description", "method", "operands"],
          "properties": {
            "description": {
              "type": "string"
            },
            "method": {
              "type": "string",
              "enum": ["subtract", "divide", "multiply_with_complement"]
            },
            "operands": {
              "type": "array",
              "minItems": 2,
              "maxItems": 2,
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "vacancy_adjustment": {
          "type": "object",
          "required": ["description", "method", "operands"],
          "properties": {
            "description": {
              "type": "string"
            },
            "method": {
              "type": "string",
              "enum": ["subtract", "divide", "multiply_with_complement"]
            },
            "operands": {
              "type": "array",
              "minItems": 2,
              "maxItems": 2,
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "expense_ratio_thresholds": {
      "type": "object",
      "properties": {
        "low_threshold": {
          "type": "number"
        },
        "high_threshold": {
          "type": "number"
        }
      },
      "required": ["low_threshold", "high_threshold"],
      "additionalProperties": false
    },
    "notes": {
      "type": "object",
      "minProperties": 4,
      "properties": {
        "income": {
          "type": "string"
        },
        "expenses": {
          "type": "string"
        },
        "market_value": {
          "type": "string"
        },
        "vacancy_rate": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
