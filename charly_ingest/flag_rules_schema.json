{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Flag Rules Schema",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "required": ["type", "threshold", "description"],
    "properties": {
      "type": {
        "type": "string",
        "enum": ["overassessment", "vacancy_anomaly", "expense_ratio", "depreciation"]
      },
      "threshold": {
        "oneOf": [
          {
            "type": "number",
            "minimum": 0
          },
          {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 2,
            "maxItems": 2
          }
        ]
      },
      "description": {
        "type": "string"
      }
    },
    "additionalProperties": false
  }
}
